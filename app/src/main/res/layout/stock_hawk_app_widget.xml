<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/widget_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@color/my_semi_opaque_grey"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/my_semi_opaque_dark_grey"
            android:gravity="left|start|top"
            android:paddingLeft="@dimen/widget_padding"
            android:paddingStart="@dimen/widget_padding"
            android:text="@string/app_name"
            android:textColor="@color/ap_white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="fill_horizontal|center_vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/widget_symbol"
                style="@style/WidgetStockSymbolTextStyle"
                android:layout_width="@dimen/widget_symbol_width"
                android:layout_height="wrap_content"
                android:gravity="left|start|center_vertical"
                android:padding="@dimen/widget_padding"
                tools:text="GOOG" />

            <TextView
                android:id="@+id/widget_price"
                style="@style/WidgetBidPriceTextStyle"
                android:layout_width="@dimen/widget_price_width"
                android:layout_height="wrap_content"
                android:layout_gravity="left|start|center_vertical"
                android:visibility="visible"
                tools:text="1000.00" />

            <RelativeLayout
                android:id="@+id/widget_change_frame"
                android:layout_width="@dimen/widget_change_width"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal|center_vertical"
                app:layout_constraintLeft_toRightOf="@+id/widget_price"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/widget_margin">

                <ImageView
                    android:id="@+id/widget_percentage_background"
                    android:layout_width="@dimen/widget_change_width"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignTop="@+id/widget_change"
                    android:layout_alignBottom="@+id/widget_change"
                    android:cropToPadding="true" />

                <TextView
                    android:id="@+id/widget_change"
                    style="@style/WidgetPercentChangeTextStyle"
                    android:layout_width="@dimen/widget_change_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|start|center_vertical"
                    android:layout_margin="@dimen/widget_in_margin"
                    android:visibility="visible"
                    android:paddingTop="@dimen/widget_padding"
                    android:paddingBottom="@dimen/widget_padding"
                    tools:text="100%" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/stockerror"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ap_transparent"
        android:gravity="center"
        android:paddingLeft="@dimen/widget_margin"
        android:paddingRight="@dimen/widget_margin"
        android:text="@string/unavailable"
        android:textColor="@color/material_red_700"
        android:visibility="invisible" />

</FrameLayout>